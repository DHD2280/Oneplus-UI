<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="preferenceBackgroundColor" format="reference|color" />
    <attr name="preferenceBackgroundColorPressed" format="reference|color" />

    <declare-styleable name="OplusPreference">
        <attr name="clickStyle" format="integer"/>
        <attr name="forcePosition" format="string"/>
        <attr name="tintTitle" format="boolean"/>
        <attr name="centerTitle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="OplusSwitchPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusEditTextPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusListPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusSliderPreference">
        <attr name="valueCount" format="integer"/>
        <attr name="updatesContinuously" format="boolean"/>
        <attr name="tickInterval" format="float"/>
        <attr name="minVal" format="float"/>
        <attr name="maxVal" format="float"/>
        <attr name="showResetButton" format="float"/>
        <attr name="showValueLabel" format="boolean"/>
        <attr name="units" format="string"/>
        <attr name="isDecimalFormat" format="boolean" />
        <attr name="decimalFormat" format="string" />
        <attr name="valueFormat" format="string" />
        <attr name="outputScale" format="float" />
    </declare-styleable>

</resources>