<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="preferenceBackgroundColor" format="reference|color" />
    <attr name="preferenceBackgroundColorPressed" format="reference|color" />

    <declare-styleable name="OplusPreference">
        <attr name="clickStyle" format="integer" />
        <attr name="forcePosition" format="string" />
        <attr name="tintTitle" format="boolean" />
        <attr name="centerTitle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OplusSwitchPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusEditTextPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusListPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusMultiSelectListPreference">
        <attr name="forcePosition" />
    </declare-styleable>

    <declare-styleable name="OplusSliderPreference">
        <attr name="valueCount" format="integer" />
        <attr name="updatesContinuously" format="boolean" />
        <attr name="tickInterval" format="float" />
        <attr name="minVal" format="float" />
        <attr name="maxVal" format="float" />
        <attr name="showResetButton" format="boolean" />
        <attr name="showValueLabel" format="boolean" />
        <attr name="units" format="string" />
        <attr name="isDecimalFormat" format="boolean" />
        <attr name="decimalFormat" format="string" />
        <attr name="valueFormat" format="string" />
        <attr name="outputScale" format="float" />
    </declare-styleable>

    <declare-styleable name="ForegroundCheckTextView">
        <attr name="android:foregroundGravity" />
        <attr name="android:foreground" />
        <attr name="foregroundInsidePadding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OplusMenuPreference">
        <attr name="android:popupMenuStyle" />
        <attr name="android:popupTheme" />
        <attr name="popupBackgroundRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SimpleMenuPopup">
        <!--<attr name="animationStyle" format="reference" />-->
        <eat-comment />

        <attr name="listMarginHorizontal" format="dimension" />
        <attr name="listMarginVertical" format="dimension" />
        <attr name="listItemPadding" format="dimension" />
        <attr name="listElevation" format="dimension" />

        <attr name="dialogMarginHorizontal" format="dimension" />
        <attr name="dialogMarginVertical" format="dimension" />
        <attr name="dialogItemPadding" format="dimension" />
        <attr name="dialogElevation" format="dimension" />
        <attr name="dialogMaxWidth" format="dimension" />

        <attr name="unit" format="dimension" />
        <attr name="maxUnits" format="integer" />
    </declare-styleable>

</resources>