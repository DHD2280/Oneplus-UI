<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Oneplus.Light.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Preference title -->
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>

        <item name="preferenceBackgroundColor">@android:color/white</item>
        <item name="preferenceBackgroundColorPressed">@color/preference_background_color_pressed</item>

        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="homeAsUpIndicator">@drawable/ic_home_up</item>

        <!-- Switch Theme -->
        <item name="materialSwitchStyle">@style/Widget.App.Material3.Switch</item>

        <item name="radioButtonStyle">@style/Widget.CompoundButton.RadioButton</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/custom_radio_selector</item>

        <!-- Slider -->
        <item name="sliderStyle">@style/Widget.App.Slider</item>
        <item name="oplusSliderStyle">@style/Widget.Oplus.Slider</item>

        <!-- AppBarLayout -->
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
        <item name="editTextPreferenceStyle">@style/EditTextPreferenceStyle</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.Snackbar.TextView</item>

        <!-- SeekBar -->
        <item name="oplusSeekBarStyle">@style/Widget.Oplus.SeekBar</item>
        <item name="oplusTooltipStyle">@style/Widget.Oplus.Tooltip</item>

        <!-- EditText -->
        <item name="oplusEditTextStyle">@style/Widget.Oplus.EditText.HintAnim.Line</item>

        <!-- Preferences -->
        <item name="preferenceCategoryStyle">@style/Preferences.Oplus.Category</item>
        <item name="preferenceStyle">@style/Preferences.Oplus.Preference</item>
        <item name="oplusSliderPreferenceStyle">@style/Preferences.Oplus.Preference.Slider</item>
        <item name="oplusSeekBarPreferenceStyle">@style/Preferences.Oplus.Preference.Seekbar</item>
        <item name="oplusSectionSeekBarPreferenceStyle">@style/Preferences.Oplus.Preference.SectionSeekbar</item>
        <item name="switchPreferenceCompatStyle">@style/Preferences.Oplus.Preference.Switch</item>
        <item name="android:windowAnimationStyle">@style/Animation.Slide.Settings</item>
    </style>

</resources>