<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oplus_alert_dialog_item_background"
        android:forceDarkAllowed="false"
        android:minHeight="@dimen/alert_dialog_list_item_min_height"
        android:orientation="vertical"
        android:paddingStart="@dimen/alert_dialog_list_item_padding_left"
        android:paddingTop="@dimen/alert_dialog_list_item_padding_top"
        android:paddingEnd="@dimen/alert_dialog_list_item_padding_right"
        android:paddingBottom="@dimen/alert_dialog_list_item_padding_bottom">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/oplus_dialog_button_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/alert_dialog_list_item_padding_left"
        android:background="@color/colorDivider"
        android:forceDarkAllowed="false"
        android:visibility="gone" />
</LinearLayout>