<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/edittext_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <it.dhd.oneplusui.appcompat.edittext.OplusEditText
        android:id="@android:id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/oplus_edittextdialog_marginbottom"
        android:minHeight="@dimen/preference_dialog_edittext_min_height"
        android:cursorVisible="true"
        android:singleLine="true"
        android:layout_marginStart="@dimen/preference_dialog_edittext_margin_horizontal"
        android:layout_marginEnd="@dimen/preference_dialog_edittext_margin_horizontal"
        app:quickDelete="true"/>
</LinearLayout>