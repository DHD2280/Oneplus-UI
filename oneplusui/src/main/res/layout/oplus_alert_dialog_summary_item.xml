<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/oplus_alert_dialog_item_background"
        android:forceDarkAllowed="false"
        android:gravity="center"
        android:minHeight="@dimen/alert_dialog_list_item_min_height"
        android:orientation="vertical"
        android:paddingStart="@dimen/oplus_bottom_alert_dialog_horizontal_button_margin_default"
        android:paddingTop="@dimen/alert_dialog_list_item_padding_top"
        android:paddingEnd="@dimen/oplus_bottom_alert_dialog_horizontal_button_margin_default"
        android:paddingBottom="@dimen/alert_dialog_list_item_padding_bottom">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/OplusTextAppearanceHeadline6"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/summary_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:lineSpacingMultiplier="1.15"
            android:paddingTop="@dimen/oplus_option_dialog_listview_text2_padding_top"
            android:textColor="@color/coui_color_secondary_neutral"
            android:textSize="@dimen/oplus_alert_dialog_summary_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_height"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/oplus_bottom_alert_dialog_horizontal_button_margin_default"
        android:background="@color/colorDivider"
        android:forceDarkAllowed="false"
        android:visibility="gone" />
</LinearLayout>